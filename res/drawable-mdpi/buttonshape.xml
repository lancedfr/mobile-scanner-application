<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true">
    <layer-list>
        <item>
            <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
                <corners
                    android:radius="100dp"
                    />
                <gradient
                    android:angle="90"
                    android:centerX="100%"
                    android:centerColor="#3D93F5"
                    android:startColor="#38F51B"
                    android:endColor="#3D93F5"
                    android:type="linear"
                    />
                <padding
                    android:left="0dp"
                    android:top="0dp"
                    android:right="0dp"
                    android:bottom="0dp"
                    />
                <size
                    android:width="176dp"
                    android:height="40dp"
                    />
            </shape> >
        </item>
    </layer-list>
</item>
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
                    <corners
                        android:radius="100dp"
                        />
                    <gradient
                        android:angle="45"
                        android:centerX="35%"
                        android:centerColor="#3D93F5"
                        android:startColor="#3D93F5"
                        android:endColor="#3D93F5"
                        android:type="linear"
                        />
                    <padding
                        android:left="0dp"
                        android:top="0dp"
                        android:right="0dp"
                        android:bottom="0dp"
                        />
                    <size
                        android:width="198dp"
                        android:height="66dp"
                        />
                    <stroke
                        android:width="0dp"
                        android:color="#878787"
                        />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>